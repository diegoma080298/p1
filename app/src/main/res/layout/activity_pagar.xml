    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTitulo"
        app:layout_constraintVertical_bias="0.0">

        <com.vinaygaba.creditcardview.CreditCardView
            android:id="@+id/idTarjetaCredito"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/cardbackground_world"
            app:cardName=" "
            app:cardNameTextColor="#cccccc"
            app:cardNumber="XXXXXXXXXXXXXXXX"
            app:cardNumberTextColor="#cccccc"
            app:expiryDate="MM/YY"
            app:expiryDateTextColor="#cccccc"
            app:hintTextColor="#cccccc"
            app:isEditable="false"
            app:putChip="true"
            app:type="auto"
            app:validTillTextColor="#cccccc" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="350dp"
        android:layout_height="270dp"
        android:layout_marginTop="200dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTitulo">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/bordearedittext"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageTarjeta"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_credit_card_24"
                app:tint="@color/gris" />

            <EditText
                android:id="@+id/txt_card"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:backgroundTint="@android:color/transparent"
                android:digits="1234567890 "
                android:ems="9"
                android:hint="@string/tarjeta_numero"
                android:inputType="number"
                android:maxLength="19" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bordearedittext"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageCalendario"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_calendar"
                app:tint="@color/gris" />

            <EditText
                android:id="@+id/txt_mes"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:hint="@string/tarjeta_mes"
                android:inputType="number"
                android:maxLength="2"
                android:textAlignment="center" />

            <TextView
                android:layout_width="15dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="/"
                android:textColor="@color/gris"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/txt_anno"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:hint="@string/tarjeta_anno"
                android:inputType="number"
                android:maxLength="2"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imageCvv"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/cvv"
                app:tint="@color/gris" />

            <EditText
                android:id="@+id/txt_cvv"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:hint="@string/tarjeta_cvv"
                android:inputType="number"
                android:maxLength="3"
                android:textAlignment="center" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bordearedittext"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_email_24"
                app:tint="@color/gris" />

            <EditText
                android:id="@+id/txt_email"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:hint="Correo electronico"
                android:inputType="textEmailAddress" />

        </LinearLayout>

        <Button
            android:id="@+id/idBotonPagar"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_below="@+id/txt_email"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/botonredondos"
            android:backgroundTint="#E31E25"
            android:text="@string/texto_pagar_monto"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

